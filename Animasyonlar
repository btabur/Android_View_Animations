import android.view.View;
import android.widget.ImageView;
import android.widget.TextView;

import com.daimajia.androidanimations.library.Techniques;
import com.daimajia.androidanimations.library.YoYo;

public class Animasyonlar {
    public static void animasyon_dogru(View view) {
        YoYo.with(Techniques.ZoomInDown).duration(500L).playOn((View) view);
    }

    public static void animasyon_dogru_puan(View view) {
        YoYo.with(Techniques.Tada).duration(1500L).playOn((View)view);
    }

    public static void animasyon_yanlis(ImageView imageView) {
        YoYo.with(Techniques.ZoomInUp).duration(500L).playOn((View)imageView);
    }

    public static void yaziAnimasyonu(View textView, int n) {
        switch (n) {
            default: {
                return;
            }
            case 28: {
                YoYo.with(Techniques.ZoomInUp).duration(1500L).playOn((View)textView);
                return;
            }
            case 27: {
                YoYo.with(Techniques.ZoomInLeft).duration(1500L).playOn((View)textView);
                return;
            }
            case 26: {
                YoYo.with(Techniques.ZoomInDown).duration(1500L).playOn((View)textView);
                return;
            }
            case 25: {
                YoYo.with(Techniques.SlideInDown).duration(1500L).playOn((View)textView);
                return;
            }
            case 24: {
                YoYo.with(Techniques.SlideInUp).duration(1500L).playOn((View)textView);
                return;
            }
            case 23: {
                YoYo.with(Techniques.SlideInLeft).duration(1500L).playOn((View)textView);
                return;
            }
            case 22: {
                YoYo.with(Techniques.SlideInRight).duration(1500L).playOn((View)textView);
                return;
            }
            case 21: {
                YoYo.with(Techniques.RotateInUpLeft).duration(1500L).playOn((View)textView);
                return;
            }
            case 20: {
                YoYo.with(Techniques.RotateInDownRight).duration(1500L).playOn((View)textView);
                return;
            }
            case 19: {
                YoYo.with(Techniques.FlipInX).duration(1500L).playOn((View)textView);
                return;
            }
            case 18: {
                YoYo.with(Techniques.FadeInUp).duration(1500L).playOn((View)textView);
                return;
            }
            case 17: {
                YoYo.with(Techniques.BounceInUp).duration(1500L).playOn((View)textView);
                return;
            }
            case 16: {
                YoYo.with(Techniques.BounceInRight).duration(1500L).playOn((View)textView);
                return;
            }
            case 15: {
                YoYo.with(Techniques.BounceInLeft).duration(1500L).playOn((View)textView);
                return;
            }
            case 14: {
                YoYo.with(Techniques.BounceInDown).duration(1500L).playOn((View)textView);
                return;
            }
            case 13: {
                YoYo.with(Techniques.BounceIn).duration(1500L).playOn((View)textView);
                return;
            }
            case 12: {
                YoYo.with(Techniques.RollIn).duration(1500L).playOn((View)textView);
                return;
            }
            case 11: {
                YoYo.with(Techniques.RollOut).duration(1500L).playOn((View)textView);
                return;
            }
            case 10: {
                YoYo.with(Techniques.RotateOut).duration(1500L).playOn((View)textView);
                return;
            }
            case 9: {
                YoYo.with(Techniques.Wave).duration(1500L).playOn((View)textView);
                return;
            }
            case 8: {
                YoYo.with(Techniques.StandUp).duration(1500L).playOn((View)textView);
                return;
            }
            case 7: {
                YoYo.with(Techniques.Tada).duration(1500L).playOn((View)textView);
                return;
            }
            case 6: {
                YoYo.with(Techniques.Bounce).duration(1500L).playOn((View)textView);
                return;
            }
            case 5: {
                YoYo.with(Techniques.Wobble).duration(1500L).playOn((View)textView);
                return;
            }
            case 4: {
                YoYo.with(Techniques.Swing).duration(1500L).playOn((View)textView);
                return;
            }
            case 3: {
                YoYo.with(Techniques.RubberBand).duration(1500L).playOn((View)textView);
                return;
            }
            case 2: {
                YoYo.with(Techniques.Flash).duration(1500L).playOn((View)textView);
                return;
            }
            case 1: {
                YoYo.with(Techniques.Landing).duration(1500L).playOn((View)textView);
                return;
            }
            case 0:
        }
        YoYo.with(Techniques.DropOut).duration(1500L).playOn((View)textView);
    }
}
